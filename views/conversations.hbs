{{> nav_bar}}
<div class="div--conversation-container">
    <div class="div--conversation-sidebar">
        {{#each messages}}
        <a href="/messages/{{this.id}}">
            <div class="div--consersation-sidebar__item" id="div--convesation-sidebar__item-{{this.sender_id}}">
                <div class="convo">
                    <div class="userImg">
                        <img src="{{this.image_url}}" alt="{{this.first_name}} {{this.last_name}}" />
                    </div>
                    <p class="userName">
                        {{this.first_name}} {{this.last_name}}
                    </p>
                </div>
                <div class="info">
                    {{this.timestamp}} {{this.subject}}
                </div>
            </div>
        </a>
        {{/each}}
    </div>
    <div class="div--conversation-messageReplies__container">
        <div class="div--conversation-messageReplies__content">
            {{#each messageReplies}}
            <div class="div--conversation-messageReply__container">
                {{this.timestamp}}
                <img src="{{this.image_url}}" alt="{{this.first_name}} {{this.last_name}}" />
                {{this.message}}{{this.reply}}
            </div>
            {{/each}}
        </div>
        <div class="div--conversation-messagesReplies__entry-container">
            <form method="POST" action="/messageReply/{{this.selectedMessage.id}}">
                <div class="form--messageReply-input">
                    <textarea class="form--messageReply-input__text" rows="4" placeholder="Write a reply..." name="reply"></textarea>
                    <input type="submit" class="form--messageReply-input__submit" value="Send" />
                </div>
            </form>
        </div>
    </div>
</div>