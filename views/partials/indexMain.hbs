<div id="indexMain">
    <div class="leftside">
        <a href="/"><img id="titleImg" src="./img/title.png" /></a>
        <img id="booksImg" src="./img/vector-knowledge.jpg" />
    </div>
    <div class="rightside">
        <div class="loginDiv">
            <form  method="POST" action="/login">
                <input id="loginEmail" maxlength="50" type="email" name="email" placeholder="email" required/>
                <input id="loginPassword" type="password" name="password" placeholder="password" required/>
                <button id="loginButton" onclick="" type="submit">login</button>
              </form>
        </div>
        <div class="descriptionText">
            Join the worlds largest community for knowledge sharing
        </div>
        <div class="signupDiv">
            <form method="POST" action="signup" class="/signup">
                <input id="signupFirstName" maxlength="20" type="text" name="firstName" placeholder="firstname" required/>
                <input id="signupLastName" maxlength="20" type="text" name="lastName" placeholder="lastname" required/>
                <input id="signupEmail" maxlength="50" type="email" name="email" placeholder="email" required/>
                <input id="signupPassword" type="password" name="password" placeholder="password" required/>
                <input id="signupPasswordCheck" type="password" name="passwordCheck" placeholder="confirm password" required/>
                <button id="signupButton" onclick="" type="submit">signup</button>
            </form>
        </div>
    </div>
</div>