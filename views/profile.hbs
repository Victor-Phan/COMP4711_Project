<!--The main profile page for a user.-->
<!-- not complete with all the actions yet-->
{{> nav_bar}}
<div class="topSection">
    <div class="leftTop">
        <div class="userImg">
            <!-- user image here-->
            <img src="{{user.image_url}}" alt="{{user.id}}" />
        </div>
        <div class="userInfo">
            <p id="userName">
                {{user.first_name}} {{user.last_name}}
            </p>
            <p id="userQualifications">
                {{user.about}}
            </p>
            <p id="userCountry">
                {{user.country}}
            </p>
        </div>
    </div>
    <div class="rightTop">
        <button id="message" type="submit">Message</button>
        <div class="likes">
            <p>
              {{user.profileLikes}} Likes
            </p>
            <button type="submit" id="like">+</button>
        </div>
        <div class="posts">
            <p>
                {{posts.count}} Posts
            </p>
        </div>
    </div>
</div>
<div class="bottomSection">
    <div class="allPosts">
        <p>All posts by {{user.first_name}}</p>
    </div>
    <div class="postList">
        <!--Discussion post list partial here-->
    </div>
</div>