<!--The landing page for the site. Allows the user to login or signup.-->
<div id="landingPage">
    <div class="leftside">
        <a href="/"><img id="titleImg" src="./img/title.png" /></a>
        <img id="booksImg" src="./img/vector-knowledge.jpg" />
    </div>
    <div class="rightside">
        <div class="loginDiv">
            <form  method="POST" action="/signin">
                <input id="loginEmail" type="email" name="email" placeholder="email" required/>
                <input id="loginPassword" type="password" name="password" placeholder="password" required/>
                <button id="loginButton" type="submit">login</button>
              </form>
        </div>
        <div class="descriptionText">
            Join the worlds largest community for knowledge sharing
        </div>
        <div class="signupDiv">
            <form method="POST" action="/signup" class="signup">
                <input id="signupFirstName" type="text" name="firstName" placeholder="firstname" required/>
                <input maxlength="20" type="text" name="lastName" placeholder="lastname" required/>
                <input  maxlength="50" type="email" name="email" placeholder="email" required/>
                <input  type="password" name="password" placeholder="password" required/>
                <input type="password" name="passwordCheck" placeholder="confirm password" required/>
                <button id="signupButton" type="submit">signup</button>
            </form>
        </div>
    </div>
</div>